@model Minecraft4Dev.Web.ViewModels.LoserBoardViewModel
@{
    ViewBag.Title = "Hello ;-)";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Hello ;-)</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table" id="loserboard">
            <tbody>
                <tr>
                    <td colspan="2">
                        <h3>Top #3 Loosers</h3>
                    </td>
                </tr>
                @foreach (var topLoser in Model.TopLosers)
                {
                    <tr>
                        <td>
                            <h4>#@topLoser.Position</h4>
                        </td>
                        <td>
                            @Html.ActionLink(topLoser.Name, "Details", new { name = topLoser.Name })
                            <span class="badge">@topLoser.Score</span>
                            @if (topLoser.Position == 1)
                            {
                                <span class="glyphicon glyphicon-star"></span>
                            }
                        </td>
                    </tr>
                }
                @if (!Model.TopLosers.Any())
                {
                    <tr>
                        <td colspan="2">
                            <div class="alert alert-info">
                                <p>No loosers found... Start playing MineCraft to get stats ;-)</p>
                            </div>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="2">
                        <h3>Top Loosers</h3>
                    </td>
                </tr>
                @foreach (var loser in Model.Losers)
                {
                    <tr>
                        <td>
                            <h4>#@loser.Position</h4>
                        </td>
                        <td>
                            @Html.ActionLink(loser.Name, "Details", new { name = loser.Name })
                            <span class="badge">@loser.Score</span>
                        </td>
                    </tr>
                }
                @if (!Model.Losers.Any())
                {
                    <tr>
                        <td colspan="2">
                            <div class="alert alert-info">
                                <p>No loosers found... Start playing MineCraft to get stats ;-)</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>